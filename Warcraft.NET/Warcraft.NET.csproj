<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;net6.0;net7.0;net8.0;net9.0</TargetFrameworks>
    <LangVersion>default</LangVersion>
    <PackageId>Warcraft.NET</PackageId>
    <Version>1.0.1</Version>
    <Authors>Luzifix, MaxtorCoder, Kaev</Authors>
    <Description>Library to read and write World of Warcraft file formats</Description>
    <PackageLicenseExpression>GPL-3.0-only</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/Luzifix/Warcraft.NET</PackageProjectUrl>
    <RepositoryUrl>https://github.com/Luzifix/Warcraft.NET</RepositoryUrl>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <Nullable>disable</Nullable>
  </PropertyGroup>

  <ItemGroup>
     <PackageReference Include="SixLabors.ImageSharp" Version="2.1.9" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Files\WMO\Flags\BfA\" />
    <Folder Include="Files\WMO\Flags\WoD\" />
  </ItemGroup>

  <ItemGroup>
    <None Include="README.md" Pack="true" PackagePath="\" />
  </ItemGroup>

  <ItemGroup>
  	<AssemblyAttribute Include="System.Runtime.CompilerServices.InternalsVisibleToAttribute">
  	  <_Parameter1>Warcraft.NET.Docs</_Parameter1>
  	</AssemblyAttribute>
  </ItemGroup>
</Project>
